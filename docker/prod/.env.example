# BodaInsure Production Environment Variables
# Copy to .env and update with actual values
# NEVER commit the actual .env file to version control

# Database
DB_USERNAME=bodainsure_prod
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=bodainsure_prod

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# JWT (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_MIN_64_CHARS

# M-Pesa Daraja API (Production)
MPESA_CONSUMER_KEY=your_production_consumer_key
MPESA_CONSUMER_SECRET=your_production_consumer_secret
MPESA_SHORTCODE=your_shortcode
MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://api.bodainsure.co.ke/api/v1/payments/mpesa/callback
MPESA_ENVIRONMENT=production

# SMS Gateway
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.africastalking.com/version1/messaging
SMS_SENDER_ID=BodaInsure

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Object Storage (S3-compatible)
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key
STORAGE_BUCKET=bodainsure-documents-prod
STORAGE_REGION=af-south-1

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_BYTE_HEX_KEY
