{
  "expo": {
    "name": "BodaInsure",
    "slug": "bodainsure",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "bodainsure",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#16a34a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.atronach.bodainsure",
      "infoPlist": {
        "NSCameraUsageDescription": "BodaInsure needs camera access to capture your ID documents for KYC verification.",
        "NSPhotoLibraryUsageDescription": "BodaInsure needs photo library access to upload your ID documents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#16a34a"
      },
      "package": "com.atronach.bodainsure",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "BodaInsure needs camera access to capture your ID documents for KYC verification."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "BodaInsure needs photo library access to upload your ID documents."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#16a34a"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
